  <%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

  <div class="subjects show">
    <h2>Show Subject</h2>

    <table summary="Subject detail view">
      <tr>
        <th>Name</th>
        <td><%= @subject.name %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= @subject.position %></td>
      </tr>
      <tr>
        <th>Visible?</th>
        <td><%= @subject.visible ? 'true' : 'false' %></td>
      </tr>
      <tr>
        <th>Created</th>
        <td><%= @subject.created_at.strftime("%A, %B #{@subject.created_at.day.ordinalize} at %I:%M:%S %p") %></td>
      </tr>
      <tr>
        <th>Updated</th>
        <td><%= @subject.updated_at.strftime("%A, %B #{@subject.updated_at.day.ordinalize} at %I:%M:%S %p") %></td>
      </tr>
    </table>

  </div>